<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.tospay.auth">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.account.AccountActivity"
            android:label="@string/title_activity_account"
            android:parentActivityName=".ui.main.TospayActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.tospay.auth.ui.main.TospayActivity" />
        </activity>
        <activity
            android:name=".ui.main.TospayActivity"
            android:label="@string/app_name"
            android:theme="@style/TospayTheme.NoActionBar" />
    </application>

</manifest>