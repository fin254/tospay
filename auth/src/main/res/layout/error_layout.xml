<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/warning_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/default_space_16"
    android:layout_marginEnd="@dimen/default_space_16"
    android:background="@drawable/disclaimer_red_bg"
    android:padding="@dimen/default_space_8"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:id="@+id/exclamation_image_view"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_marginTop="@dimen/default_space_6"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_exclamation_red" />

    <TextView
        android:id="@+id/warning_text_view"
        style="@style/Tospay.TextAppearance.Regular.Error"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:paddingStart="@dimen/default_space_32"
        android:paddingLeft="@dimen/default_space_32"
        android:paddingTop="@dimen/default_space_6"
        android:paddingEnd="@dimen/default_space_12"
        android:paddingRight="@dimen/default_space_12"
        android:paddingBottom="@dimen/default_space_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>